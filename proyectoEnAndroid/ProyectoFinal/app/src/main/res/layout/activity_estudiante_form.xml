<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".estudiante.estudiante_form">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:gravity="center_horizontal"
                android:hint="Registro Estudiante"
                android:textAlignment="center"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/txtCedulaFrm"
                android:layout_width="352dp"
                android:layout_height="50dp"
                android:layout_marginTop="28dp"
                android:ems="10"
                android:hint="Cedula"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtNombresFrm"
                android:layout_width="352dp"
                android:layout_height="50dp"
                android:layout_marginTop="28dp"
                android:ems="10"
                android:hint="Nombres"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtApellidosFrm"
                android:layout_width="352dp"
                android:layout_height="50dp"
                android:layout_marginTop="28dp"
                android:ems="10"
                android:hint="Apellidos"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="352dp"
                android:layout_height="match_parent"
                android:layout_marginTop="28dp"
                android:text="Genero" />

            <Spinner
                android:id="@+id/spinnerGenero"
                android:layout_width="352dp"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="352dp"
                android:layout_height="match_parent"
                android:layout_marginTop="28dp"
                android:text="Estado Civil" />

            <Spinner
                android:id="@+id/spinnerECivil"
                android:layout_width="352dp"
                android:layout_height="50dp" />

            <EditText
                android:id="@+id/txtEmailFrm"
                android:layout_width="352dp"
                android:layout_height="50dp"
                android:layout_marginTop="28dp"
                android:ems="10"
                android:hint="Correo Electronico"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/txtCelularFrm"
                android:layout_width="352dp"
                android:layout_height="50dp"
                android:layout_marginTop="28dp"
                android:ems="10"
                android:hint="Celular"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtDireccionFrm"
                android:layout_width="352dp"
                android:layout_height="50dp"
                android:layout_marginTop="28dp"
                android:ems="10"
                android:hint="Direccion"
                android:inputType="textPersonName" />

            <LinearLayout
                android:id="@+id/formEst"
                android:layout_width="352dp"
                android:layout_height="match_parent"
                android:layout_marginTop="28dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="352dp"
                    android:layout_height="match_parent"
                    android:text="Materias Disponibles" />
            </LinearLayout>

            <Button
                android:id="@+id/btnGuardarFrm"
                android:layout_width="178dp"
                android:layout_height="49dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="28dp"
                android:text="Guardar"
                app:backgroundTint="#28A745" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>